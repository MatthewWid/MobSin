{
	"name": "whirl",
	"description": "A JavaScript canvas game engine",
	"repository": "https://github.com/MatthewWid/Whirl.git",
	"author": "MatthewWid",
	"license": "MIT",
	"scripts": {
		"dev": "webpack --config ./config/webpack.dev.config.js",
		"prod": "webpack --config ./config/webpack.prod.config.js",
		"doc:watch": "mkdocs serve",
		"doc-sass:watch": "sass --watch ./doc/css/scss:./doc/css/css --style compressed --sourcemap=none",
		"doc-deploy": "mkdocs gh-deploy",
		"doc": "npm-run-all --parallel doc**:watch"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"webpack": "^4.31.0",
		"webpack-cli": "^3.3.2"
	}
}

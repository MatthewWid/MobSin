{
	"name": "whirl",
	"version": "3.0.0-alpha.4",
	"description": "Event-based fully documented 2D game engine for JavaScript canvas.",
	"repository": "https://github.com/MatthewWid/Whirl.git",
	"license": "MIT",
	"scripts": {
		"doc": "jsdoc ./src/ -r -d ./doc/ -c ./.jsdoc -t node_modules/ink-docstrap/template -R ./README.md",
		"dev": "webpack --config ./config/webpack.config.js --env dev",
		"prod": "webpack --config ./config/webpack.config.js --env prod",
		"prettier": "prettier --write ./src/**/*.js --config ./.prettierrc --ignore-path ./.prettierignore"
	},
	"devDependencies": {
		"css-loader": "^2.1.1",
		"ink-docstrap": "^1.3.2",
		"jsdoc": "^3.6.3",
		"mini-css-extract-plugin": "^0.7.0",
		"node-sass": "^4.12.0",
		"prettier": "^1.19.1",
		"sass-loader": "^7.1.0",
		"webpack-fix-style-only-entries": "^0.3.0"
	},
	"dependencies": {
		"@babel/core": "^7.6.2",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"babel-loader": "^8.0.6",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.9",
		"webpack-merge": "^4.2.2"
	}
}
